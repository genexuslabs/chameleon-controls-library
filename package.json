{
  "name": "@genexus/chameleon",
  "version": "0.4.1",
  "description": "chameleon - A library of white-label, highly-customizable and reusable web components",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "./dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/chameleon/chameleon.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "generate": "stencil generate",
    "prettier": "prettier src/**/*.{tsx,ts,jsx,js,css,json,md} --write",
    "lint": "eslint src/**/*{.ts,.tsx} --fix",
    "start": "stencil build --dev --watch --serve --docs",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "validate": "npm run lint && npm run test && npm run build",
    "validate.ci": "npm run lint && npm run build -- --max-workers 1 --debug"
  },
  "license": "MIT",
  "dependencies": {
    "qr-creator": "^1.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "stencil-click-outside": "^1.8.0"
  },
  "devDependencies": {
    "@stencil/core": "~1.17.0",
    "@stencil/eslint-plugin": "~0.4.0",
    "@stencil/sass": "~1.4.0",
    "@types/jest": "~26.0.0",
    "@types/prettier": "~2.4.0",
    "@types/puppeteer": "~5.4.0",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "eslint": "~7.32.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-prettier": "~4.2.0",
    "husky": "~8.0.0",
    "jest": "~26.6.0",
    "jest-cli": "~26.6.0",
    "lint-staged": "~13.0.0",
    "prettier": "~2.7.0",
    "puppeteer": "~15.2.0",
    "typescript": "~4.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{tsx,ts,jsx,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
